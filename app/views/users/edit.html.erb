<div class="container">
  <div clas="row">
    <div class="col-md-9">

		<h1>User info</h1>

		<%= form_for(@user) do |f| %>
		  <% if @user.errors.any? %>
		   <div id="error_explanation" class="alert alert-danger">
		  	<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
		  	<ul>
			  	<% @user.errors.full_messages.each do |message| %>
			  	<li><%= message %></li>
			  	<% end %>
			</ul>
		   </div>
		  <% end %>

			<h4>Name<%= f.text_field :name %></h4>
			<h4>Image</h4>
			<%= f.attachment_field :profile_image %>

			<h4>Introduction</h4>
			<%= f.text_field :introduction %>
			<br>
			<%= f.submit "Update User" %>
		<% end %>
	</div>
    <div class="col-md-3">
    </div>
</div>