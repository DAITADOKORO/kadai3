<% if newbook.errors.any? %>
    <h1><%= newbook.errors.count %>errors prohibited this obj from being saved:</h1>
    <ul>
        <% newbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<h1>User info</h1>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg
', fallback: "no_image.jpg" %>
<h4>name <%= user.name %></h4>
<h4>introduction <%= user.introduction %></h4>

<%= link_to "", edit_user_path(user), class:"glyphicon glyphicon-wrench btn btn-default btn-block" %>
<%= form_for(newbook) do |f| %>

    <h1>New book</h1>
    <h4>Title</h4>
    <%= f.text_field :title, class: "form-control" %>
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "form-control" %>
    <p></p>
    <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
<% end %>