<div class="container">
  <div clas="row">
    <div class="col-md-3">
      <%= render 'users/common', user:@user, newbook:@newbook %>
    </div>
    <div class="col-md-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id) %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



